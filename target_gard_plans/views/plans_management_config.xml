<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ____________________ Commissions ________________________ -->

        <record model="ir.ui.view" id="plans_management_config_form_view">
            <field name="name">plans.management.config.form</field>
            <field name="model">plans.management.config</field>
            <field name="arch" type="xml">
                <form string="Plan Management Config" create="0">
                    <header>
                        <!-- <button icon="fa-cogs" string="Confirm" name="done_action" type="object" states="draft"/>
                        <button name="draft_action" string="Return" type="object" states="done"/> -->
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name" readonly="1"/>
                            <field name="manag_type" attrs="{'readonly':[('state','=','active')]}"/>
                            <field name="next_call" attrs="{'required':[('manag_type','=','auto')],'invisible':[('manag_type','!=','auto')],'readonly':[('state','=','active')]}"/>
                            <field name="interval_number" attrs="{'required':[('manag_type','=','auto')],'invisible':[('manag_type','!=','auto')],'readonly':[('state','=','active')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="plans_management_config_tree_view">
            <field name="name">plans.management.config.tree</field>
            <field name="model">plans.management.config</field>
            <field name="arch" type="xml">
                <tree string="Plans Management Config" create="0">
                    <field name="name"/>
                    <field name="manag_type"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="plans_management_config_action_view" model="ir.actions.act_window">
            <field name="name">Commissions</field>
            <field name="res_model">plans.management.config</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Config
                </p>
            </field>
        </record>

        <menuitem
            id="plans_management_config_menu"
            name="Plans Management Configurations"
            parent="configuration_root_menu"
            action="plans_management_config_action_view"
            sequence="2"
            groups="base.group_user"
        />

    </data>
</odoo>